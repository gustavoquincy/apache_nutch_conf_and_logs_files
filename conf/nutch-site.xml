  <value>10240</value>
</property>
<property>
  <name>fetcher.threads.fetch</name>
  <value>25</value>
</property>
<property>
  <name>fetcher.maxNum.threads</name>
  <value>10000</value>
</property>
<property>
	<name>parsefilter.naivebayes.trainfile</name>
	<value>naivebayes-train.txt</value>
</property>
